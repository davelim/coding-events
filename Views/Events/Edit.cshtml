<h1>Edit Event</h1>
<form method="post">
   <div class="form-group">
      <label>
         Name
         <input
            type="text"
            name="name"
            value="@ViewBag.editEvent.Name"
            class="form-control"/>
      </label>
   </div>
   <div class="form-group">
      <label>
         Description
         <input
            type="text"
            name="description"
            value="@ViewBag.editEvent.Description"
            class="form-control"/>
      </label>
   </div>
   <input type="hidden" value="@ViewBag.editEvent.Id" name="eventId"/>
   <input type="submit" value="Update Event">
</form>